{% extends 'base.html.twig' %}
{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="padding: 20px;">
<img src="{{ asset('images/logo.png') }}" alt="Logo" class="navbar-brand-logo" style="width: 10%;  border-radius: 10%;">
    <div class="container">
        <a class="navbar-brand h1 text-white" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link h1 text-white" href="/login">Login</a>
                </li>
                {% if is_granted('ROLE_USER') %}
                <!-- Afficher les éléments spécifiques aux utilisateurs connectés -->
                <li class="nav-item">
                    <a class="nav-link h1 text-white" href={{ path('account') }}>Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link h1 text-white" href="/logout">Logout</a>
                </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                <!-- Afficher les éléments spécifiques aux administrateurs -->
                <li class="nav-item">
                    <a class="nav-link h1 text-white" href="/admin">Admin</a>
                </li>
                {% endif %}
            </ul>
        </div>
        {% if not is_granted('ROLE_USER') %}
        <!-- Afficher le bouton "Sign In" pour les utilisateurs non connectés -->
        <div class="d-none d-lg-block">
            <a class="btn btn-light h1" href="/register">Sign In</a>
        </div>
        {% endif %}
    </div>
</nav>
{% endblock %}