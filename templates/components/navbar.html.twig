{% extends 'base.html.twig' %}
{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/"><img class="img-fluid w-25" src="" alt=""></a>
        <div class="collapse navbar-collapse me-5 justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                {% if is_granted('ROLE_USER') %}
                <!-- Afficher les éléments spécifiques aux utilisateurs connectés -->
                <li class="nav-item">
                    <a class="nav-link" href={{ path('account') }}>Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
				<!-- Afficher les éléments spécifiques aux administrateurs -->
                <li class="nav-item">
                    <a class="nav-link" href="/admin">Admin</a>
                </li>
                {% endif %}
            </ul>
        </div>
        <div class="d-none d-lg-block">
            {% if not is_granted('ROLE_USER') %}
            <!-- Afficher le bouton "Sign In" pour les utilisateurs non connectés -->
            <a class="btn btn-primary" href="/register">Sign In</a>
            {% endif %}
        </div>
        <div class="d-lg-none">
            <button class="btn navbar-burger p-0">
            </button>
        </div>
    </div>
</nav>
{% endblock %}