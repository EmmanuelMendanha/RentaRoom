{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="card" style="max-width: 600px;">
            <div class="card-body bg-light">
                <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>
                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm, {'attr': {'class': 'w-100'}}) }}
                
                {# Set a variable for common attributes to ensure consistency #}
                {% set input_attr = {'attr': {'class': 'form-control mb-3', 'style': 'width: 100%;'}} %}
                
                {{ form_row(registrationForm.email, input_attr) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password',
                    attr: input_attr.attr
                }) }}
                {{ form_row(registrationForm.name, input_attr) }}
                {{ form_row(registrationForm.address, input_attr) }}
                {{ form_row(registrationForm.phone, input_attr)}}
                {{ form_row(registrationForm.agreeTerms, {
                    'attr': {'class': 'mb-3 form-check'}
                }) }}

                <button type="submit" class="btn btn-primary w-100 py-2">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
