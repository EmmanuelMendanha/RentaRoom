{# templates/rooms/show.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ room.title }}</h1>
    <p>{{ room.description }}</p>
    <p>Price: {{ room.price }}</p>
    <img src="{{ asset('images/') ~ room.imageMain }}" alt="{{ room.title }}">

    <h2>Book this room</h2>
    <form action="{{ path('room_book', {id: room.id}) }}" method="post">
        <label for="dateIn">Start date:</label>
        <input type="date" id="dateIn" name="dateIn">

        <label for="dateOut">End date:</label>
        <input type="date" id="dateOut" name="dateOut">

        <input type="submit" value="Book">
    </form>

    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
{% endblock %}