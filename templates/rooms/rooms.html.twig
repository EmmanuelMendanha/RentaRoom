{% extends 'base.html.twig' %}

{% block title %}Rooms - RentaRoom
{% endblock %}

{% block body %}
{% include 'components/navbar.html.twig' %}
	<div class="container">
		<h1>Rooms</h1>
		<div class="row">
			{% for room in rooms %}
				<div class="col-md-4">
					<div class="card mb-4 shadow-sm">
						<img src="{{ asset('images/') ~ room.imageMain }}" alt="{{ room.title }}">
						<div class="card-body">
							<h5 class="card-title">{{ room.title }}</h5>
							<p class="card-text">{{ room.description }}</p>
							<div class="d-flex justify-content-between align-items-center">
								<div class="btn-group">
									<a href="{{ path('room_show', {id: room.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
								</div>
								<small class="text-muted">{{ room.price }}$</small>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
